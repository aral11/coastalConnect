# Development Environment Configuration for CoastalConnect
# This file contains safe default values for local development

# Application Configuration
NODE_ENV=development
PORT=8080
APP_NAME=coastalConnect
APP_URL=http://localhost:8080
APP_VERSION=1.0.0

# Database Configuration - Development Mode
# Set to 'mock' to use fallback data when database is not available
DB_MODE=mock
DB_SERVER=localhost
DB_DATABASE=CoastalConnectDev
DB_USER=
DB_PASSWORD=
DB_TRUST_SERVER_CERTIFICATE=true
DB_ENCRYPT=false

# Authentication - Development Keys
JWT_SECRET=coastal-connect-development-secret-key-2024
JWT_EXPIRES_IN=7d

# Email Configuration - Development Mode (Disabled)
SMTP_MODE=development
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
# Set to 'true' to disable actual email sending in development
DISABLE_EMAIL_SENDING=true

# SMS Configuration - Development Mode (Disabled) 
SMS_MODE=development
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=
# Set to 'true' to disable actual SMS sending in development
DISABLE_SMS_SENDING=true

# Google Services - Development Mode (Disabled)
GOOGLE_PLACES_API_KEY=
GOOGLE_MAPS_API_KEY=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
# Set to 'true' to use mock Google services
USE_MOCK_GOOGLE_SERVICES=true

# Payment Gateway - Development Mode (Test/Mock)
RAZORPAY_MODE=test
RAZORPAY_KEY_ID=rzp_test_mock_key_for_development
RAZORPAY_KEY_SECRET=mock_secret_for_development

# Social Media APIs - Development Mode (Disabled)
INSTAGRAM_ACCESS_TOKEN=
INSTAGRAM_CLIENT_ID=
INSTAGRAM_CLIENT_SECRET=
USE_MOCK_INSTAGRAM=true

# Admin Configuration
ADMIN_SECRET_KEY=dev-admin-key-2024

# Feature Flags for Development
ENABLE_REAL_PAYMENTS=false
ENABLE_REAL_NOTIFICATIONS=false
ENABLE_REAL_DATABASE=false
ENABLE_API_RATE_LIMITING=false

# Logging Configuration
LOG_LEVEL=info
ENABLE_DEBUG_LOGS=true
