# CoastalConnect Production Environment Configuration
# Copy this file to .env.production and fill in your actual values
# NEVER commit actual production secrets to version control

# ==============================================
# CRITICAL SECURITY SETTINGS
# ==============================================

# JWT Secret - Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secure-jwt-secret-at-least-32-characters-long

# Admin Secret Key - Generate with: openssl rand -base64 32  
ADMIN_SECRET_KEY=your-super-secure-admin-secret-at-least-32-characters-long

# Session Secret - Generate with: openssl rand -base64 32
SESSION_SECRET=your-super-secure-session-secret-at-least-32-characters-long

# ==============================================
# DATABASE CONFIGURATION
# ==============================================

# Database Type: 'supabase' or 'sqlserver'
DB_TYPE=supabase

# Supabase Configuration (if using Supabase)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# SQL Server Configuration (if using SQL Server)
SQLSERVER_HOST=your-sqlserver-host
SQLSERVER_DATABASE=coastalconnect_prod
SQLSERVER_USER=coastalconnect_user
SQLSERVER_PASSWORD=your-super-secure-database-password
SQLSERVER_PORT=1433
SQLSERVER_ENCRYPT=true
SQLSERVER_TRUST_CERT=false

# ==============================================
# PAYMENT GATEWAY CONFIGURATION
# ==============================================

# Razorpay Configuration
RAZORPAY_KEY_ID=rzp_live_your_key_id
RAZORPAY_KEY_SECRET=your_razorpay_secret_key
RAZORPAY_WEBHOOK_SECRET=your_razorpay_webhook_secret

# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# ==============================================
# EMAIL & SMS CONFIGURATION
# ==============================================

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ==============================================
# THIRD PARTY INTEGRATIONS
# ==============================================

# Google Services
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
GOOGLE_OAUTH_CLIENT_ID=your_google_oauth_client_id
GOOGLE_OAUTH_CLIENT_SECRET=your_google_oauth_client_secret

# Instagram Basic Display API
INSTAGRAM_APP_ID=your_instagram_app_id
INSTAGRAM_APP_SECRET=your_instagram_app_secret

# ==============================================
# APPLICATION CONFIGURATION
# ==============================================

# Environment
NODE_ENV=production

# Server Configuration
PORT=3001
HOST=0.0.0.0

# CORS Configuration
ALLOWED_ORIGINS=https://coastalconnect.in,https://www.coastalconnect.in

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# ==============================================
# MONITORING & LOGGING
# ==============================================

# Sentry Error Tracking (optional)
SENTRY_DSN=your_sentry_dsn

# Application Insights (optional)
APPINSIGHTS_INSTRUMENTATIONKEY=your_app_insights_key

# Log Level
LOG_LEVEL=info

# ==============================================
# SSL/TLS CONFIGURATION
# ==============================================

# SSL Certificate paths (if using custom certificates)
SSL_CERT_PATH=/path/to/certificate.crt
SSL_KEY_PATH=/path/to/private.key

# Force HTTPS
FORCE_HTTPS=true

# ==============================================
# RATE LIMITING CONFIGURATION
# ==============================================

# General rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Auth rate limiting
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# Payment rate limiting
PAYMENT_RATE_LIMIT_WINDOW_MS=60000
PAYMENT_RATE_LIMIT_MAX_REQUESTS=10

# ==============================================
# CACHE CONFIGURATION
# ==============================================

# Redis Configuration (for session storage and caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# Cache TTL (Time To Live) in seconds
CACHE_TTL=3600

# ==============================================
# ANALYTICS & TRACKING
# ==============================================

# Google Analytics
GA_TRACKING_ID=UA-123456789-1

# Facebook Pixel
FACEBOOK_PIXEL_ID=your_facebook_pixel_id

# ==============================================
# SECURITY CONFIGURATION
# ==============================================

# Password Requirements
MIN_PASSWORD_LENGTH=8
REQUIRE_SPECIAL_CHARS=true
REQUIRE_UPPERCASE=true
REQUIRE_NUMBERS=true

# JWT Configuration
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Session Configuration
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTP_ONLY=true
SESSION_COOKIE_SAME_SITE=strict

# ==============================================
# BACKUP & RECOVERY
# ==============================================

# Database Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/backups

# ==============================================
# PERFORMANCE CONFIGURATION
# ==============================================

# Connection Pool Settings
DB_POOL_MIN=2
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=30000

# Request Timeout
REQUEST_TIMEOUT=30000

# ==============================================
# FEATURE FLAGS
# ==============================================

# Enable/Disable Features
ENABLE_REGISTRATION=true
ENABLE_PAYMENT=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_SMS_VERIFICATION=true
ENABLE_SOCIAL_LOGIN=true
ENABLE_FILE_UPLOAD=true
ENABLE_ANALYTICS=true

# ==============================================
# DEVELOPMENT/TESTING (Production should be false)
# ==============================================

# Debug Mode
DEBUG=false

# Enable detailed error messages
DETAILED_ERRORS=false

# Mock external services (should be false in production)
MOCK_PAYMENT_GATEWAY=false
MOCK_EMAIL_SERVICE=false
MOCK_SMS_SERVICE=false

# ==============================================
# TIMEZONE & LOCALIZATION
# ==============================================

# Application Timezone
TZ=Asia/Kolkata

# Default Language
DEFAULT_LANGUAGE=en

# Supported Languages
SUPPORTED_LANGUAGES=en,hi,kn

# ==============================================
# BUSINESS CONFIGURATION
# ==============================================

# Business Information
BUSINESS_NAME=CoastalConnect
BUSINESS_EMAIL=admin@coastalconnect.in
BUSINESS_PHONE=+91-8105003858
BUSINESS_ADDRESS=Coastal Karnataka, India

# Support Information
SUPPORT_EMAIL=support@coastalconnect.in
SUPPORT_PHONE=+91-8105003858

# ==============================================
# LEGAL & COMPLIANCE
# ==============================================

# Privacy Policy URL
PRIVACY_POLICY_URL=https://coastalconnect.in/privacy
TERMS_OF_SERVICE_URL=https://coastalconnect.in/terms

# Cookie Consent
COOKIE_CONSENT_REQUIRED=true

# GDPR Compliance
GDPR_ENABLED=true
DATA_RETENTION_DAYS=2555

# ==============================================
# NOTIFICATIONS
# ==============================================

# Push Notification Service (Firebase)
FIREBASE_SERVER_KEY=your_firebase_server_key
FIREBASE_SENDER_ID=your_firebase_sender_id

# Webhook URLs for external notifications
WEBHOOK_URL_BOOKING_CONFIRMED=https://your-webhook-url/booking-confirmed
WEBHOOK_URL_PAYMENT_SUCCESS=https://your-webhook-url/payment-success

# ==============================================
# CDN & STATIC ASSETS
# ==============================================

# CDN Configuration
CDN_URL=https://cdn.coastalconnect.in
STATIC_ASSETS_BASE_URL=https://assets.coastalconnect.in

# Image Optimization
IMAGE_QUALITY=80
IMAGE_RESIZE_WIDTH=1200
IMAGE_THUMBNAIL_SIZE=300

# ==============================================
# SEARCH & INDEXING
# ==============================================

# Elasticsearch Configuration (if using)
ELASTICSEARCH_URL=https://your-elasticsearch-url
ELASTICSEARCH_INDEX=coastalconnect

# Search API Key (if using external search service)
SEARCH_API_KEY=your_search_api_key

# ==============================================
# MAINTENANCE & HEALTH CHECKS
# ==============================================

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=60000

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=We are currently performing maintenance. Please try again later.

# ==============================================
# NOTES FOR DEPLOYMENT
# ==============================================

# 1. Generate secure secrets using: openssl rand -base64 32
# 2. Set up SSL certificates for HTTPS
# 3. Configure firewall to allow only necessary ports
# 4. Set up regular database backups
# 5. Monitor logs for security events
# 6. Regularly update dependencies
# 7. Implement proper logging and monitoring
# 8. Set up CI/CD pipeline for secure deployments
# 9. Review and update security policies regularly
# 10. Test disaster recovery procedures
